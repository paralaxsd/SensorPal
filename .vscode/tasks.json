{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Solution",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"SensorPal.slnx"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Run Server",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/SensorPal.Server"
			],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Nuke Test",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"build.ps1",
				"Test"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		}
	]
}