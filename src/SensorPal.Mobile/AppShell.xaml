<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:SensorPal.Mobile.Pages"
       x:Class="SensorPal.Mobile.AppShell"
       Title="SensorPal">

    <Shell.ToolbarItems>
        <ToolbarItem Text="Logs" Clicked="OnLogsClicked" Order="Secondary" />
        <ToolbarItem Text="Settings" Clicked="OnSettingsClicked" Order="Secondary" />
        <ToolbarItem Text="About" Clicked="OnAboutClicked" Order="Secondary" />
    </Shell.ToolbarItems>

    <TabBar>
        <ShellContent Title="Monitoring"
                      ContentTemplate="{DataTemplate pages:MonitoringPage}"
                      Route="MonitoringPage" />
        <ShellContent Title="Events"
                      ContentTemplate="{DataTemplate pages:EventsPage}"
                      Route="EventsPage" />
        <ShellContent Title="Stats"
                      ContentTemplate="{DataTemplate pages:StatsPage}"
                      Route="StatsPage" />
    </TabBar>

</Shell>
